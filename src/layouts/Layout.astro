---
import { ViewTransitions } from 'astro:transitions';
import { Image } from 'astro:assets';
import Navbar from '@components/layout/Navbar.svelte';
import HeaderContainer from '@components/layout/HeaderContainer.astro';
import FooterComponent from '@components/layout/FooterComponent.astro';
import UpButton from '@components/layout/UpButton.svelte';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions/>
	</head>
	<body>
		<HeaderContainer transition:persist>
			<Image
				src="/logo.png"
				alt="Logo"
				width="100"
				height="100"
				loading="eager"
				class="w-full h-14"
				slot="logo"
			/>
			<Navbar slot='nav' client:load/>
		</HeaderContainer>
		<main >
			<slot />
		</main>
		<UpButton client:load/>
		<FooterComponent/>
	</body>
</html>

<style is:global>
	html {
		font-family: system-ui, sans-serif;
		background: #fff;
	}
	body {
		width: 100%;
	}
</style>
