---
    const levels = [
        {
            name: "Inicial"
        },
        {
            name: "Nivel basico"
        },
        {
            name: "MEDIA GENERAL"
        }
    ]
---
<section class="flex flex-col gap-2 justify-center items-center m-2">
    <div>
        <h2 class="text-center font-bold text-lg">Niveles educativos</h2>
    </div>
    <div class="flex gap-4">
        {levels.map(({name}) => (
            <div class="w-40 text-center p-4 shadow-md">
                {name}
            </div>
        ))}
    </div>
</section>